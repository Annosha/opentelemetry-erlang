{%- macro enum_value_return_type(value) -%}
  {%- if value is string -%}
  atom() | String.t()
  {%- elif value is integer -%}
  integer()
  {%- else -%}
  NOT_MAPPED
  {%- endif -%}
{%- endmacro -%}
{%- macro enum_value_return_type_example(value) -%}
  {%- if value is string -%}
  :custom_value
